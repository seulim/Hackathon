@{if (Model.AccessChannel == EnumOriginChannelType.KakaoTalkApp)
  {
    ViewBag.Title = "KakaoTalkPhoneNumAgree";
    Layout = "~/Views/Shared/_KakaoTalkLayout.cshtml";
  }
}
@using GMKT.GMobile.Web.Models;

@model GMKT.GMobile.Web.Models.KakaoTalkApplyUserM

<script type="text/javascript" src="@Url.Content("~/Scripts/KakaoTalk/KakaoTalkPhoneNumAgree.js?dummy=20130131132400")"></script>
@*<style type="text/css">
    input[type=number]::-webkit-inner-spin-button {
    -webkit-appearance: none;
} 
</style>*@
<!-- WRAPPER -->
<div id="wrapper">

	<!-- CONTENTS -->
	<div id="contents" class="cts">

		<!-- MAYPAGE -->
		<div class="mypage">

			<div class="mhgroup">
				<h3 class="tit_left">카카오톡 맞춤정보<span>(사용자 인증)</span></h3>
			</div>

			<div class="kakao">
				<h4>G마켓 회원 인증</h4>
@{if(Model.AccessChannel == EnumOriginChannelType.KakaoTalkApp)
  {
                    <p class="tt2">현재 고객님의 나의 정보에 저장된 휴대폰 번호(아래)가 카카오톡에서 사용하는 휴대폰 번호와 일치하지 않습니다.<br />휴대폰 번호를 다시한번 확인해 주세요. 휴대폰 번호를 수정할 경우 '나의 정보'의 휴대폰 번호도 함께 수정됩니다.</p>
  }
  else if (Model.AccessChannel == EnumOriginChannelType.GmarketApp)
  {
	                <p class="tt2">현재 고객님의 나의 정보에 저장된 휴대폰 번호는 아래와 같습니다.<br />아래 휴대폰 번호를 수정할 경우 '나의 정보'의 휴대폰 번호도 함께 수정됩니다.</p>
  }
  else
  {
      <h1>잘못된접근..</h1> //javascript alert
  }
}
				<div class="agr_wrap">
					<form id="frmPhoneNumAgree" action="#" method="post">
						<fieldset>
						<legend>전화번호 입력</legend>
							<div class="tele">
                                @Html.TextBoxFor(m => m.UserHPNoArr[0], new { @class = "ip_num", type ="text"}) -
                                @Html.TextBoxFor(m => m.UserHPNoArr[1], new { @class = "ip_num", type="text"}) -
                                @Html.TextBoxFor(m => m.UserHPNoArr[2], new { @class = "ip_num", type="text"})
							</div>
							<div class="agr">
@{if(Model.AccessChannel == EnumOriginChannelType.KakaoTalkApp)
  {
                                <p>고객님이 입력한 휴대폰 번호는 인증이 완료되는 즉시 삭제 및 폐기됩니다.</p>
                                @Html.HiddenFor(m => m.UseAgree)
  }
  else if (Model.AccessChannel == EnumOriginChannelType.GmarketApp)
  {
                                <h5>카카오톡 맞춤정보 사용 동의</h5>
								<p>카카오톡 맞춤정보 서비스는 주문 및 배송관련 메시지를 다양한 혜택/이벤트 정보와 함께 SMS대신 카카오톡으로 발송해 드리는 서비스 입니다.<br />고객님이 입력한 휴대폰 번호는 인증이 완료되는 즉시 삭제 및 폐기됩니다.</p>
								<div class="ip_agr">
                                @Html.CheckBoxFor(m => m.UseAgree, new { id = "chkboxUseAgree" })<label for="order_agr">카카오톡 맞춤정보 사용 동의</label></div>
  }
  else
  {
      <h1>잘못된접근..</h1> //javascript alert
  }
}
							@Html.HiddenFor(m => m.AccessChannel)
                            </div>
							<div class="btn2_grp">
								<ul>
									<li><a href="#" class="btn_blue" id="btnGetCertCode"><span>인증번호 받기</span></a></li>
									<li><a href="#" class="btn_white" id="btnCancle"><span>취소</span></a></li>
								</ul>
							</div>
						</fieldset>
					</form>
				</div>				
			</div>			

		</div>
		<!--// MAYPAGE -->
			
	</div>
	<!--// CONTENTS -->

</div>
<!--// WRAPPER -->
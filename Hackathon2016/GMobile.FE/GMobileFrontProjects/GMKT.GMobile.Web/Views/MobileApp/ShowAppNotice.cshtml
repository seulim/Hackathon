@using GMKT.GMobile.Constant;
@{
    Layout = null;
	string userAgent = Request.Headers["User-Agent"];
	if (userAgent == null)
	{
		userAgent = string.Empty;
	}
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="ko" xml:lang="ko">
<head>

 <meta name="viewport" content="user-scalable=no, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, width=device-width, target-densitydpi=high-dpi" />


<script type="text/javascript" src="@Urls.ScriptUrl/js/mobile/main/common/jquery-1.7.1.min.js"></script>

<style>
body,div{margin:0px;padding:0px;}
</style>

</head>
<body style="width:100%;height:100%">


<div id="wrap" style="height:100%">

</div>

@{
	if ( ViewBag.AppNotice != null )
	{

<script type="text/javascript">
	jQuery(document).ready(function () {

		var content = "@ViewBag.AppNotice.Content";

		if (content != null && content != 'undefined') {
			jQuery('#wrap').html(decodeURIComponent(content));
		}

		if (jQuery('#btnDetail') != null) {
			jQuery('#btnDetail').click(function () {
				document.location.href = "@ViewBag.AppNotice.LandingURL";
			});
		}

	});
</script>

	}
}

</body>

</html>

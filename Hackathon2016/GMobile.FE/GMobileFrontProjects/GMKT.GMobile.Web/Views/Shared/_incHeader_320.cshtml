@using GMKT.GMobile.Util;
@using GMKT.GMobile.Constant;
@model dynamic
	<meta http-equiv="content-Type" content="text/html; charset=utf-8" /> 
	<meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, width=device-width" />

 
@if (PageAttr.IsMain == true)
{
	<meta property="fb:admins" content="100000991027914" />
}

@if (PageAttr.FbTagUrl != String.Empty) 
{
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@PageAttr.FbTitle" />
    <meta property="og:url" content="@PageAttr.FbTagUrl" />
    <meta property="og:image" content="@PageAttr.FbTagImage" />
	<meta property="og:image:width" content="200" />
	<meta property="og:image:height" content="200" />
    <meta property="og:site_name" content="Mobile Gmarket" />
    <meta property="og:description" content="@PageAttr.FbTagDescription" />
}

	<meta http-equiv="Pragma" content="no-cache" />
	<meta http-equiv="Cache-Control" content="no-cache" />
	<meta http-equiv="Cache-Control" content="max-age=0" />
	<meta http-equiv="Expires" content="Sat, 01 Dec 2001 00:00:00 GMT" />
	<meta name="format-detection" content="telephone=no" />
	<title>@ViewBag.Title</title>
	<link rel="apple-touch-icon-precomposed" href="@Urls.MobileImageUrlV2/icon_01.png" />

@{
	string rawURL = Request.RawUrl.ToLower();

	if (rawURL.IndexOf("?") >= 0)
	{
		rawURL = rawURL.Substring(0, rawURL.IndexOf("?"));
	}
}

<link rel="stylesheet" type="text/css" href="@Urls.StyleUrlV2/common.css?v=4" />
@if (rawURL.IndexOf("category/list") >= 0 || rawURL.IndexOf("/search/search") >= 0 || rawURL.IndexOf("/departmentstore/search") >= 0 || rawURL.IndexOf("/departmentstore/category") >= 0)
{
	<link rel="stylesheet" type="text/css" href="@Urls.StyleUrlV2/lpsrp.css" />		
}
else if (rawURL.IndexOf("/category/") >= 0 || rawURL.IndexOf("/smartdelivery/list") >= 0 || rawURL.IndexOf("/smartdelivery/search") >= 0 || rawURL.IndexOf("/smartdelivery/best50") >= 0 || rawURL.IndexOf("/smartdelivery/smallpackinglist") >= 0)
{
<link rel="stylesheet" type="text/css" href="@Urls.StyleUrlV2/cpplpsrp.css" />	
}
@if (rawURL.Equals("/") || rawURL.IndexOf("/home/index") >= 0 || rawURL.IndexOf("/best") >= 0 || rawURL.IndexOf("/superdeal") >= 0 || rawURL.Contains("/look") || rawURL.Contains("/mart") || rawURL.IndexOf("/space") >= 0 || rawURL.IndexOf("/tour") >= 0 || rawURL.IndexOf("/pluszone") >= 0 || rawURL.IndexOf("/couponzone") >= 0 || rawURL.IndexOf("/greencarpet") >= 0 || rawURL.IndexOf("/gmileage") >= 0 || rawURL.IndexOf("/gstamp") >= 0 || rawURL.IndexOf("/supergift") >= 0 || rawURL.IndexOf("/cardpoint") >= 0)
{
    <link rel="stylesheet" type="text/css" href="@Urls.StyleUrlV2/main.css" />
}
@if (rawURL.IndexOf("/display/bestsellerlist") >= 0 ||
    rawURL.IndexOf("/best/bestsellerlist") >= 0 ||
    rawURL.IndexOf("/display/lazyloadbestsellerlist") >= 0)
{
	<link rel="stylesheet" type="text/css" href="@Urls.StyleUrl/320/category_2013_11.css?v=3" />
}
@if (rawURL.IndexOf("/display/specialshoppinglist") >= 0 || rawURL.IndexOf("/etc/") >= 0 ||
    rawURL.IndexOf("/vertical/") >= 0 || rawURL.IndexOf("/home/payinfo") >= 0 ||
    rawURL.IndexOf("/display/today") >= 0)
{
	<link rel="stylesheet" type="text/css" href="@Urls.StyleUrlV2/etc.css" />
}
@if (rawURL.IndexOf("/eventzone/") >= 0)
{
	<link rel="stylesheet" type="text/css" href="@Urls.StyleUrl/320/marketing_2013_10.css?v=5" />
}
@if (rawURL.IndexOf("/customercenter") >= 0 || rawURL.IndexOf("/event/eventlist") >= 0)
{	
    <link rel="stylesheet" type="text/css" href="@Urls.StyleUrlV2/help.css" />    
}
@if (!string.IsNullOrEmpty(PageAttr.MainCss))
{
	<link rel="stylesheet" type="text/css" href="@Urls.StyleUrl/320/@PageAttr.MainCss" />
}
@if (rawURL.IndexOf("/shopbest/") >= 0)
{
	<link rel="stylesheet" type="text/css" href="@Urls.StyleUrlV2/shopbest.css?v=1" />
}
@if (rawURL.IndexOf("/smartdelivery") >= 0 || rawURL.IndexOf("/smartdelivery/") >= 0)
{
	<link rel="stylesheet" type="text/css" href="@Urls.StyleUrlV2/smart.css" />
}
@if (rawURL.IndexOf("/sellershop/") >= 0)
{
	<link rel="stylesheet" type="text/css" href="@Urls.StyleUrlV2/shop_v2.css" />
}
@if (rawURL.IndexOf("/departmentstore") >= 0)
{
	<link rel="stylesheet" type="text/css" href="@Urls.StyleUrlV2/departmentstore.css" />
}